<!doctype html>
<html>
  <head>
    <title>{{ page_title }}</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="{{ page_description | escape }}">
    <link rel="canonical" href="{{ canonical_url }}">
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
    <meta name="theme-color" content="{{ settings.color_primary }}">
    <meta name="format-detection" content="telephone=no">
    <link
      rel="prefetch"
      as="document"
      href="https://{{shop.domain}}">
    <link
      rel="dns-prefetch"
      href="https://cdn.shopify.com"
      crossorigin>
    <link
      rel="preconnect"
      href="https://cdn.shopify.com"
      crossorigin>
    <link rel="preconnect" href="https://monorail-edge.shopifysvc.com">
    {%- if settings.favicon != blank %}<link
        rel="shortcut icon"
        type="image/png"
        href="{{ settings.favicon | img_url: '32x' }}">{% endif -%}
    {%- if settings.favicon_apple != blank %}<link
        rel="apple-touch-icon-precomposed"
        type="image/png"
        sizes="152x152"
        href="{{ settings.favicon_apple | img_url: '152x' }}">{% endif -%}

    {{ content_for_header }}
    <!-- Header hook for plugins -->
    {{ 'application.css' | asset_url | stylesheet_tag }}
    {{ 'header.css' | asset_url | stylesheet_tag }}
    <script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.8.2/dist/alpine.min.js" defer></script>
    <script
      src="https://code.jquery.com/jquery-3.7.1.min.js"
      integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo="
      crossorigin="anonymous"></script>
    <script defer="defer" src="https://unpkg.com/@themesberg/flowbite@1.1.1/dist/flowbite.bundle.js"></script>
    <script src="{{ 'application.js' | asset_url }}" defer="defer"></script>
    {% if template.name contains 'blog' %}
      <script src="{{ 'infinite-scroll-blog.js' | asset_url }}" defer="defer"></script>
    {% endif %}

    <style>
      [x-cloak] {
        display: none !important;
      }
    </style>
  </head>
  <body>
    {% section 'header' %}
    <main role="main">
      {{ content_for_layout }}
    </main>
    {% section 'footer' %}

    <script src="//shipping-rates-calculator.incubate.dev/js/core/main.min.js?timestamp=1694495588&shop=thenianantham.myshopify.com" defer></script>
  </body>
</html>